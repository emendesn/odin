{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "odinDebug",
            "type": "shell",
            "command": "~/hb/bin/hbmk2",
            "args": [
                "~/odin/odin.hbp",
                "-b"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "odinRelease",
            "type": "shell",
            "command": "~/hb/bin//hbmk2",
            "args": [
                "~/odin/odin.hbp",
                "-rebuild"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "kodiakRelease",
            "dependsOn": [
                "kodiakRelease"
            ],
            "type": "shell",
            "command": [
                "~/odin/kodiak",
                "/P/home/edilson/odin/data",
                "/T/home/edilson/odin/tmp"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}